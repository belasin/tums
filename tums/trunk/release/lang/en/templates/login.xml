<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en" xmlns:n="http://nevow.com/ns/nevow/0.1">
    <head>
        <link rel="stylesheet" type="text/css" href="/css/login.css"/>
        <title>Thusa Communicate Server</title>
    </head>
    <body>
        <table height="100%"  width="100%"><tr height="100%"><td>
            <div id="centerBox" valign="middle">
                <div id="blockTop"></div>
                <div id="centerBlock">
                    <img src="/images/tcs.png"/>&nbsp;
                </div>
                <div id="menuBlock">
                    <form n:render="form" method="post" id="loginForm">
                        <table style="text-align: center" align="right">
                            <tr>
                                <td align="right">
                                    <label for="username"><img src="/images/username.png" alt="Username:" /></label>
                                </td>
                                <td align="left" style="padding-left:5px">
                                    <input type="text"  id="username" name="username" />
                                </td>
                            </tr>
                            <tr>
                                <td align="right">
                                    <label for="password"><img src="/images/password.png" alt="Password:" /></label>
                                </td>
                                <td align="left" style="padding-left:5px">
                                    <input type="password" id="password" name="password" />
                                </td>
                            </tr>
                            <tr>
                                <td align="right">
                                    <label for="rememberMe"><img src="/images/rememberme.png" alt="Remember Me:" /></label>
                                </td>
                                <td align="left">
                                    <input type="checkbox" id="rememberMe" name="rememberMe"/>
                                </td>                                    
                            </tr>
                            <tr>
                                <td colspan="2" style="text-align: center">
                                    <input type="submit" value="Login" />
                                </td>
                            </tr>
                        </table>
                    </form>
                </div>
            </div>
        </td></tr></table>
    </body>
</html>
