<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en" xmlns:n="http://nevow.com/ns/nevow/0.1">
    <head>
        <title>Vulani</title>
        <link rel="stylesheet" type="text/css" href="/css/style.css"/>
    </head>
    <body>
        <div id="pageTitle"><img src="/images/thusaLogo.png" alt="" align="middle" />
        </div>
        <div class="pageBar" id="menuBar" ></div>
        <div id="pageContent">
            <form n:render="form" method="post" id="loginForm">
                <table style="text-align: center" align="center">
                    <tr>
                        <td colspan="2" style="text-align: center">
                            <img src="/images/tumslgl.png" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="username">Username:</label>
                        </td>
                        <td>
                            <input type="text"  id="username" name="username" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="password">Password:</label>
                        </td>
                        <td>
                            <input type="password" id="password" name="password" />
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" style="text-align: center">
                            <input type="submit" value="Login" />
                        </td>
                    </tr>
                </table>
            </form>
        </div>

        <div class="pageBar" id="pageFotter">
            <span class="snapLeft">Version 1.3.0</span><span class="snapRight">A product of <a href="http://www.thusa.co.za/">Thusa Business Support (Pty) Ltd</a></span>
        </div>
    </body>
</html>
